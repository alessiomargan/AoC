{
  "name": "Advent of Code Workspace (Conda)",
  "dockerComposeFile": "../docker-compose.conda.yml",
  "service": "aoc-jupyter",
  "workspaceFolder": "/workspace",

  // VS Code settings
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/aoc/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.formatting.provider": "none",
        "jupyter.notebookFileRoot": "${workspaceFolder}",
        "files.watcherExclude": {
          "**/__pycache__/**": true,
          "**/lp_*": true
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  },

  // Forward Jupyter port
  "forwardPorts": [8888],
  "portsAttributes": {
    "8888": {
      "label": "JupyterLab",
      "onAutoForward": "notify"
    }
  },

  // Post-create command
  "postCreateCommand": "echo 'Advent of Code workspace ready! Conda environment: aoc'",

  // Keep container running
  "shutdownAction": "stopCompose",

  // Run as root
  "remoteUser": "root"
}
