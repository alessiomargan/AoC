{
  "name": "Advent of Code Workspace",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "aoc-jupyter",
  "workspaceFolder": "/workspace",

  // Features to install (alternative to Dockerfile if you want modularity)
  "features": {},

  // VS Code settings
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/aoc/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.formatting.provider": "none",
        "jupyter.notebookFileRoot": "${workspaceFolder}",
        "files.watcherExclude": {
          "**/__pycache__/**": true,
          "**/lp_*": true
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  },

  // Forward Jupyter port
  "forwardPorts": [8888],
  "portsAttributes": {
    "8888": {
      "label": "JupyterLab",
      "onAutoForward": "notify"
    }
  },

  // Post-create command (runs after container is created)
  "postCreateCommand": "bash -c 'echo \"Advent of Code workspace ready! Open http://localhost:8888 for JupyterLab\"'",
  //"postCreateCommand": "bash -c 'source /opt/conda/etc/profile.d/conda.sh && conda activate aoc && pre-commit install && echo \"Advent of Code workspace ready! Open http://localhost:8888 for JupyterLab\"'",
  // Mount host's .gitconfig for git/GitHub operations
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/aocd,target=/root/.config/aocd,type=bind,consistency=cached"
  ],

  // Keep container running
  "shutdownAction": "stopCompose",

  // Run as root (matches Dockerfile)
  "remoteUser": "root",

  // In Codespaces you canâ€™t directly access your local $HOME
  // Store the session token as a Codespaces secret.
  // Inject it via an environment variable AOC_SESSION.
  "containerEnv": {
    "AOC_SESSION": "${localEnv:AOC_SESSION}"
  }
}
